{
  "name": "documentdb-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run compile && npm run generate && next dev --turbopack",
    "build": "npm run compile && npm run generate && next build --turbopack",
    "compile": "npm run compile:clean && npm run compile:content",
    "compile:content": "tsx scripts/compile-content.tsx",
    "compile:clean": "tsx scripts/compile-clean.tsx",
    "generate": "npm run generate:media",
    "generate:media": "tsx scripts/copy-article-media.tsx",
    "start": "npx serve out",
    "lint": "eslint"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "gray-matter": "^4.0.3",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1",
    "mermaid": "^11.12.2",
    "next": "^15.5.9",
    "pluralize": "^8.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark": "^15.0.1",
    "react-x-mermaid": "^0.0.10",
    "remark-gfm": "^4.0.1",
    "strip-markdown": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.19.27",
    "@types/pluralize": "^0.0.33",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.4",
    "ink": "^6.6.0",
    "minimatch": "^10.1.1",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
